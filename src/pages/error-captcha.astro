---
// src/pages/error-captcha.astro
import Layout from '../layout/Layout.astro';
---

<Layout>
  <div style="
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    position: relative;
  ">
    <!-- Breadcrumbs -->
    <nav style="
      position: absolute;
      top: 20px;
      left: 20px;
      z-index: 10;
    ">
      <div style="
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
      ">
        <a href="/violet-virgo" style="
          color: white;
          text-decoration: none;
          background: rgba(255,255,255,0.2);
          padding: 8px 15px;
          border-radius: 20px;
          backdrop-filter: blur(10px);
          display: flex;
          align-items: center;
          gap: 5px;
          transition: all 0.3s;
        "
        onmouseenter="this.style.background='rgba(255,255,255,0.3)';"
        onmouseleave="this.style.background='rgba(255,255,255,0.2)';">
          <span>üè†</span>
          <span>Inicio</span>
        </a>
        <span style="color: rgba(255,255,255,0.5);">‚Ä∫</span>
        <span style="color: white; background: rgba(239, 68, 68, 0.8); padding: 8px 15px; border-radius: 20px;">
          Error Captcha
        </span>
      </div>
    </nav>

    <div style="
      max-width: 500px;
      width: 100%;
      background: white;
      border-radius: 20px;
      padding: 40px;
      text-align: center;
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
      position: relative;
      overflow: hidden;
      animation: aparecer 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    ">
      <!-- Decoraci√≥n -->
      <div style="
        position: absolute;
        top: -50px;
        right: -50px;
        width: 150px;
        height: 150px;
        background: linear-gradient(45deg, #fbbf24, #f59e0b);
        border-radius: 50%;
        opacity: 0.1;
      "></div>
      <div style="
        position: absolute;
        bottom: -60px;
        left: -60px;
        width: 200px;
        height: 200px;
        background: linear-gradient(45deg, #3b82f6, #1d4ed8);
        border-radius: 50%;
        opacity: 0.1;
      "></div>
      
      <!-- Animaci√≥n Lottie 404 -->
      <div id="lottie-container" style="
        width: 200px;
        height: 200px;
        margin: 0 auto 10px;
      "></div>
      
      <!-- T√≠tulo -->
      <h1 style="
        font-size: 2.5rem;
        color: #1f2937;
        margin-bottom: 10px;
        position: relative;
      ">
        ¬°Captcha Requerido!
      </h1>
      
      <!-- Mensaje simplificado -->
      <p style="
        color: #6b7280;
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 30px;
        position: relative;
      ">
        Debes completar el verificador de seguridad para continuar.
      </p>
      
      <!-- Soluci√≥n simplificada -->
      <div style="
        background: linear-gradient(135deg, #d1fae5, #a7f3d0);
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 30px;
        border: 2px dashed #10b981;
        position: relative;
      ">
        <h3 style="color: #065f46; margin-top: 0; margin-bottom: 10px;">¬øQu√© hacer?</h3>
        <div style="color: #047857; text-align: center;">
          1. Regresa al formulario<br>
          2. Completa el captcha<br>
          3. Vuelve a intentar
        </div>
      </div>
      
      <!-- Botones -->
      <div style="display: flex; gap: 15px; justify-content: center; position: relative;">
        <button 
          id="btnRegresar"
          style="
            background: linear-gradient(135deg, #3b82f6, #1d4ed8);
            color: white;
            padding: 15px 30px;
            border: none;
            border-radius: 50px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s;
            box-shadow: 0 5px 15px rgba(59, 130, 246, 0.4);
          "
          onmouseenter="this.style.transform='translateY(-3px)'; this.style.boxShadow='0 8px 25px rgba(59, 130, 246, 0.6)';"
          onmouseleave="this.style.transform='translateY(0)'; this.style.boxShadow='0 5px 15px rgba(59, 130, 246, 0.4)';"
        >
          ‚Ü©Ô∏è Volver al Formulario
        </button>
        
        <button 
          id="btnInicio"
          style="
            background: white;
            color: #3b82f6;
            padding: 15px 25px;
            border: 2px solid #3b82f6;
            border-radius: 50px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s;
          "
          onmouseenter="this.style.background='#3b82f6'; this.style.color='white'; this.style.transform='translateY(-2px)';"
          onmouseleave="this.style.background='white'; this.style.color='#3b82f6'; this.style.transform='translateY(0)';"
        >
          üè† Ir al Inicio
        </button>
      </div>
      
      <!-- Contador simplificado -->
      <div style="
        margin-top: 25px;
        color: #9ca3af;
        font-size: 14px;
        position: relative;
      ">
        <div style="
          font-size: 2rem;
          font-weight: bold;
          color: #ef4444;
          margin-bottom: 5px;
          font-family: monospace;
        ">
          <span id="contador">10</span>
        </div>
        <p>Redirecci√≥n en <span id="segundos">10</span> segundos</p>
      </div>
    </div>
  </div>

  <style>
    @keyframes aparecer {
      0% { transform: scale(0.5); opacity: 0; }
      100% { transform: scale(1); opacity: 1; }
    }
    
    @keyframes latido {
      0% { transform: scale(1); }
      50% { transform: scale(1.05); }
      100% { transform: scale(1); }
    }
    
    @keyframes brillo {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.7; }
    }
  </style>

  <script>
    // Cargar Lottie
    function cargarLottie() {
      const container = document.getElementById('lottie-container');
      
      // Crear script de Lottie si no existe
      if (!window.loadAnimation) {
        const script = document.createElement('script');
        script.src = 'https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.7.8/lottie.min.js';
        script.onload = inicializarLottie;
        document.head.appendChild(script);
      } else {
        inicializarLottie();
      }
      
      function inicializarLottie() {
        if (window.bodymovin || window.lottie) {
          const animation = lottie.loadAnimation({
            container: container,
            renderer: 'svg',
            loop: true,
            autoplay: true,
            path: 'https://lottie.host/2997cf11-acbe-4bf2-8205-19c0e960a613/VptfWLwL6Y.lottie'
          });
          
          // Ajustar tama√±o y posici√≥n
          container.style.width = '200px';
          container.style.height = '200px';
          container.style.margin = '0 auto 10px';
        }
      }
    }
    
    // Contador regresivo
    function iniciarContador() {
      let segundos = 10;
      const contador = document.getElementById('contador');
      const textoSegundos = document.getElementById('segundos');
      
      const intervalo = setInterval(() => {
        segundos--;
        contador.textContent = segundos;
        textoSegundos.textContent = segundos;
        
        if (segundos <= 3) {
          contador.style.color = '#dc2626';
          contador.style.animation = 'brillo 0.5s infinite';
        }
        
        if (segundos <= 0) {
          clearInterval(intervalo);
          window.location.href = '/violet-virgo';
        }
      }, 1000);
    }
    
    // Bot√≥n Regresar
    document.getElementById('btnRegresar').addEventListener('click', function() {
      if (document.referrer) {
        window.history.back();
      } else {
        window.location.href = '/violet-virgo';
      }
    });
    
    // Bot√≥n Inicio
    document.getElementById('btnInicio').addEventListener('click', function() {
      window.location.href = '/violet-virgo';
    });
    
    // Inicializar todo cuando cargue la p√°gina
    document.addEventListener('DOMContentLoaded', function() {
      cargarLottie();
      iniciarContador();
    });
    
    // Efecto de part√≠culas simplificado
    setTimeout(() => {
      const particulas = document.createElement('div');
      particulas.style.cssText = `
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 1;
      `;
      
      for (let i = 0; i < 15; i++) {
        const particula = document.createElement('div');
        particula.style.cssText = `
          position: absolute;
          width: 4px;
          height: 4px;
          background: ${Math.random() > 0.5 ? '#ef4444' : '#fbbf24'};
          border-radius: 50%;
          animation: caer ${1 + Math.random() * 2}s linear infinite;
          top: -10px;
          left: ${Math.random() * 100}%;
          opacity: 0.4;
          animation-delay: ${Math.random() * 2}s;
        `;
        particulas.appendChild(particula);
      }
      
      document.body.appendChild(particulas);
      
      // Agregar estilo para la animaci√≥n de ca√≠da
      const style = document.createElement('style');
      style.textContent = `
        @keyframes caer {
          0% { transform: translateY(0) rotate(0deg); opacity: 0.4; }
          100% { transform: translateY(100vh) rotate(180deg); opacity: 0; }
        }
      `;
      document.head.appendChild(style);
    }, 1000);
  </script>
</Layout>