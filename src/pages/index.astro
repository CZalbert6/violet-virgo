---
// src/pages/index.astro
import Layout from '../layout/Layout.astro';
---

<Layout>
  <div style="text-align: center; padding: 40px 20px;">
    <h1 style="font-size: 2.5rem; color: #333; margin-bottom: 10px;">
      üéØ Hola Astro üíú + Railway
    </h1>
    <p style="color: #666; font-size: 1.1rem; margin-bottom: 40px;">
      Escribe lo que quieras y se guardar√° en PostgreSQL
    </p>
    
    <!-- SOLO UN CAMPO -->
    <div style="
      max-width: 400px;
      margin: 0 auto;
      background: white;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    ">
      
      <!-- √öNICO CAMPO DE TEXTO -->
      <div style="margin-bottom: 25px;">
        <label style="
          display: block;
          text-align: left;
          margin-bottom: 10px;
          font-weight: 600;
          color: #555;
        ">
          üìù Escribe aqu√≠:
        </label>
        <input 
          type="text" 
          id="miCampoUnico"
          placeholder="Escribe cualquier cosa..."
          style="
            width: 100%;
            padding: 15px;
            border: 2px solid #e2e8f0;
            border-radius: 10px;
            font-size: 16px;
          "
        >
      </div>
      
      <!-- hCaptcha -->
      <div style="margin: 25px 0;">
        <div class="h-captcha" data-sitekey="10000000-ffff-ffff-ffff-000000000001"></div>
        <small style="color: #666; display: block; margin-top: 10px;">
          üîß Usando hCaptcha de prueba (siempre v√°lido)
        </small>
      </div>
      
      <!-- Bot√≥n -->
      <button 
        id="botonEnviar"
        style="
          background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
          color: white;
          padding: 16px;
          border: none;
          border-radius: 10px;
          font-size: 18px;
          font-weight: 600;
          cursor: pointer;
          width: 100%;
        "
      >
        üíæ Guardar en PostgreSQL
      </button>
      
      <!-- Resultado -->
      <div id="resultado" style="
        margin-top: 25px;
        padding: 20px;
        border-radius: 10px;
        display: none;
        text-align: left;
      "></div>
      
      <!-- Estado del sistema -->
      <div id="estadoSistema" style="
        margin-top: 20px;
        padding: 15px;
        background: #f8fafc;
        border-radius: 8px;
        font-size: 0.9rem;
        color: #666;
      ">
        <div>üîç <strong>Estado:</strong> <span id="estadoTexto">Verificando conexi√≥n...</span></div>
        <div>üåê <strong>Backend:</strong> <span id="backendURL">Railway PostgreSQL</span></div>
      </div>
    </div>
  </div>

  <!-- JavaScript ACTUALIZADO para Railway -->
  <script>
    // 1. Cargar hCaptcha
    const script = document.createElement('script');
    script.src = 'https://js.hcaptcha.com/1/api.js';
    script.async = true;
    document.head.appendChild(script);
    
    // 2. URL de TU backend en Railway (¬°YA CORREGIDA!)
    const BACKEND_URL = 'https://violet-virgo-production.up.railway.app';
    
    // 3. Verificar conexi√≥n al backend cuando cargue la p√°gina
    document.addEventListener('DOMContentLoaded', async function() {
      const estadoTexto = document.getElementById('estadoTexto');
      const backendURL = document.getElementById('backendURL');
      
      backendURL.textContent = BACKEND_URL;
      
      try {
        const respuesta = await fetch(`${BACKEND_URL}/health`);
        const datos = await respuesta.json();
        
        if (datos.status === '‚úÖ OK') {
          estadoTexto.innerHTML = '<span style="color: #10b981;">‚úÖ Conectado a Railway</span>';
          if (datos.tabla === '‚úÖ Existe') {
            estadoTexto.innerHTML += '<br><span style="color: #10b981;">‚úÖ Tabla lista</span>';
          }
          
          // Mostrar cu√°ntos mensajes hay
          if (datos.total_mensajes >= 0) {
            estadoTexto.innerHTML += `<br><span style="color: #3b82f6;">üìä ${datos.total_mensajes} mensajes guardados</span>`;
          }
        } else {
          estadoTexto.innerHTML = '<span style="color: #ef4444;">‚ùå Error en backend</span>';
        }
      } catch (error) {
        estadoTexto.innerHTML = `<span style="color: #f59e0b;">‚ö†Ô∏è Backend no disponible</span><br><small>${error.message}</small>`;
      }
    });
    
    // 4. Cuando haga clic en el bot√≥n
    document.getElementById('botonEnviar').addEventListener('click', async function() {
      const campo = document.getElementById('miCampoUnico');
      const resultado = document.getElementById('resultado');
      const boton = this;
      const estadoTexto = document.getElementById('estadoTexto');
      
      // Obtener lo que escribi√≥
      const texto = campo.value.trim();
      
      if (!texto) {
        resultado.innerHTML = '<div style="color: #92400e; background: #fef3c7; padding: 15px; border-radius: 8px;">‚ö†Ô∏è Escribe algo primero</div>';
        resultado.style.display = 'block';
        return;
      }
      
      // Verificar hCaptcha
      const tokenCaptcha = document.querySelector('[name="h-captcha-response"]')?.value;
      
      if (!tokenCaptcha) {
        resultado.innerHTML = '<div style="color: #92400e; background: #fef3c7; padding: 15px; border-radius: 8px;">üîí Completa el hCaptcha</div>';
        resultado.style.display = 'block';
        return;
      }
      
      // Cambiar bot√≥n
      const textoOriginal = boton.textContent;
      boton.textContent = 'üíæ Guardando en PostgreSQL...';
      boton.disabled = true;
      estadoTexto.innerHTML = '<span style="color: #f59e0b;">‚è≥ Enviando a Railway...</span>';
      
      try {
        // ENVIAR AL BACKEND REAL en Railway
        const respuesta = await fetch(`${BACKEND_URL}/api/guardar`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            texto: texto,
            hcaptcha: tokenCaptcha
          })
        });
        
        const datos = await respuesta.json();
        
        if (datos.success) {
          // √âXITO: Mostrar informaci√≥n del guardado
          resultado.innerHTML = `
            <div style="color: #065f46; background: #d1fae5; padding: 20px; border-radius: 8px; border-left: 5px solid #10b981;">
              <strong>‚úÖ ¬°Guardado en PostgreSQL!</strong><br><br>
              <strong>Texto:</strong> "${texto}"<br>
              <strong>ID en BD:</strong> ${datos.id}<br>
              <strong>Fecha:</strong> ${datos.fecha ? datos.fecha : new Date().toLocaleDateString()}<br>
              <strong>Servidor:</strong> Railway PostgreSQL<br><br>
              <small>üìä <a href="${BACKEND_URL}/api/mensajes" target="_blank" style="color: #065f46; text-decoration: underline;">Ver todos los mensajes</a></small>
            </div>
          `;
          estadoTexto.innerHTML = '<span style="color: #10b981;">‚úÖ Guardado exitosamente</span>';
          
          // Limpiar campo
          campo.value = '';
          
          // Resetear hCaptcha
          if (window.hcaptcha) {
            window.hcaptcha.reset();
          }
          
          // Actualizar contador despu√©s de 2 segundos
          setTimeout(async () => {
            try {
              const healthResp = await fetch(`${BACKEND_URL}/health`);
              const healthData = await healthResp.json();
              if (healthData.total_mensajes >= 0) {
                estadoTexto.innerHTML = `<span style="color: #10b981;">‚úÖ ${healthData.total_mensajes} mensajes guardados</span>`;
              }
            } catch (e) {
              // Ignorar error de actualizaci√≥n
            }
          }, 2000);
          
        } else {
          // ERROR del backend
          resultado.innerHTML = `
            <div style="color: #991b1b; background: #fee2e2; padding: 15px; border-radius: 8px;">
              ‚ùå Error: ${datos.message}<br>
              <small>${datos.error || ''}</small>
            </div>
          `;
          estadoTexto.innerHTML = '<span style="color: #ef4444;">‚ùå Error al guardar</span>';
        }
        
        resultado.style.display = 'block';
        
      } catch (error) {
        // Error de conexi√≥n
        console.error('Error de conexi√≥n:', error);
        resultado.innerHTML = `
          <div style="color: #991b1b; background: #fee2e2; padding: 15px; border-radius: 8px;">
            ‚ùå Error de conexi√≥n con Railway<br>
            <small>${error.message}</small><br><br>
            <strong>URL backend:</strong> ${BACKEND_URL}<br>
            <strong>Ayuda:</strong> Verifica que Railway est√° desplegado y que /health responde
          </div>
        `;
        resultado.style.display = 'block';
        estadoTexto.innerHTML = '<span style="color: #ef4444;">‚ùå Error de conexi√≥n</span>';
      } finally {
        // Restaurar bot√≥n
        boton.textContent = textoOriginal;
        boton.disabled = false;
      }
    });
    
    // 5. Permitir enviar con Enter
    document.getElementById('miCampoUnico').addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        e.preventDefault();
        document.getElementById('botonEnviar').click();
      }
    });
    
    // 6. Efectos visuales
    document.getElementById('miCampoUnico').addEventListener('focus', function() {
      this.style.borderColor = '#667eea';
      this.style.boxShadow = '0 0 0 3px rgba(102, 126, 234, 0.1)';
    });
    
    document.getElementById('miCampoUnico').addEventListener('blur', function() {
      this.style.borderColor = '#e2e8f0';
      this.style.boxShadow = 'none';
    });
    
    document.getElementById('botonEnviar').addEventListener('mouseenter', function() {
      this.style.transform = 'translateY(-2px)';
      this.style.boxShadow = '0 10px 20px rgba(102, 126, 234, 0.3)';
    });
    
    document.getElementById('botonEnviar').addEventListener('mouseleave', function() {
      this.style.transform = 'translateY(0)';
      this.style.boxShadow = 'none';
    });
    
    // 7. Bot√≥n para ver mensajes
    document.addEventListener('DOMContentLoaded', function() {
      const estadoDiv = document.getElementById('estadoSistema');
      const verMensajesBtn = document.createElement('button');
      verMensajesBtn.innerHTML = 'üìä Ver mensajes guardados';
      verMensajesBtn.style = `
        margin-top: 10px;
        padding: 8px 16px;
        background: #3b82f6;
        color: white;
        border: none;
        border-radius: 6px;
        font-size: 0.9rem;
        cursor: pointer;
        width: 100%;
      `;
      verMensajesBtn.onclick = function() {
        window.open(`${BACKEND_URL}/api/mensajes`, '_blank');
      };
      estadoDiv.appendChild(verMensajesBtn);
    });
  </script>
</Layout>